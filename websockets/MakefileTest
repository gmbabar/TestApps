CC = g++
FLAGS = -g -std=c++11 -I/tmp/gbabar/dist/nebula/include/
LIBS = -lboost_system -lpthread -lcrypto -lssl

objects = websocket_md2client

all: $(objects)

$(objects): %: %.cpp
	$(CC) $(FLAGS) -o $@ $< $(LIBS)

# Inactive.
ServerSimulator: ServerSimulator.cpp
	g++ $(FLAGS) -o $@  $< $(LIBS)

clean:
	rm -rf *.dSYM
	rm -f `ls | egrep -v "Makefile|\.cpp|\.hpp|\.h|common" | xargs`


